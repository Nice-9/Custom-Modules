<odoo>
    <record id="fleet_fuel_export_wizard_form" model="ir.ui.view">
        <field name="name">fleet.fuel.export.wizard.form</field>
        <field name="model">fleet.fuel.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Fuel Logs">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="export_format"/>
                </group>
                <footer>
                    <button name="export_logs" type="object" string="Export" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_fuel_log_export_wizard"
                name="Export Fuel Logs"
                res_model="fleet.fuel.export.wizard"
                view_mode="form"
                target="new"/>
    <menuitem id="menu_export_fuel_logs"
              name="Export Fuel Logs"
              parent="fleet.fleet_vehicle_menu_root"
              action="action_fuel_log_export_wizard"/>
</odoo>
