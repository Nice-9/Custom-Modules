<odoo>
    <record id="view_fleet_vehicle_log_fuel_form_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.fuel.form.inherit</field>
        <field name="model">fleet.vehicle.log.fuel</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_fuel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='liter']" position="after">
                <separator string="Fuel Estimation"/>
                <field name="cost_per_litre"/>
                <field name="litres_estimated"/>
                <field name="distance_estimated"/>
                <field name="total_cost_estimated" readonly="1"/>
                <field name="consumption_rate_estimated" readonly="1"/>
                <separator string="Variance"/>
                <field name="fuel_variance" readonly="1"/>
                <field name="consumption_variance" readonly="1"/>
                <separator string="Trip & Driver"/>
                <field name="trip_id"/>
                <field name="driver_id"/>
            </xpath>
        </field>
    </record>
</odoo>
